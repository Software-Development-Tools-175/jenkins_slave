pipeline {
    agent any
    parameters {
        string description: 'write the week number', name: 'Week_Number'
    }

    stages {

        stage('Welcome to main branch'){
            steps{
                echo 'Start Program'
            }
        }

        stage('Pre-build') {
            steps {
                sh 'echo Pre-build'
                sh 'python3 --version'
            }
        }

        stage('Parse value from CSV'){
            steps{
                script{
                    try{
                        sh "python parsingCSV.py"
                    }catch(Exception e){
                        echo "Error occured"
                    }
                }
            }
        }

        stage('Trigger the Slave Jobs') {
            steps {
                echo 'Start Trigger to send name and age to slave'
                echo 'Triggering ...'
                build job: 'slave', parameters: [string([[101, "Jennifer", "Roberts", 44],[102, "Julia", "Roberts", 42]])]
            }
        }
    }
}
