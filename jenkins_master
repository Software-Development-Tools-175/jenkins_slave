pipeline {
    agent any

    stages {

        stage('Welcome to main branch'){
            steps{
                echo 'Start Program'
            }
        }

        stage('Pre-build') {
            steps {
                sh 'echo Pre-build'
                sh 'python3 --version'
            }
        }

        stage('Parse value from CSV'){
            steps{
                script{
                    def excelFormat = CSVFormat.EXCEL
                    def records = readCSV file: 'args.csv', format: excelFormat
                    println "${records}"
                }
            }
        }

        stage('Trigger the Slave Jobs') {
            steps {
                echo 'Start Trigger to send name and age to slave'
                echo 'Triggering ...'
                build job: 'slave', parameters: [string(name: 'NAME', value: 'Alice'), string(name: 'Ages', value: '21')]
            }
        }
    }
}
