pipeline {
    agent any

    env{
        argsList = argsList
    }

    stages {

        stage('Welcome to main branch'){
            steps{
                echo 'Start Program'
            }
        }

        stage('Pre-build') {
            steps {
                sh 'echo Pre-build'
                sh 'python3 --version'
            }
        }

        stage('Parse value from CSV'){
            readCSV(file: "args.csv").each { line ->
                line.each { field ->
                    echo field
                }
            }
        }

        stage('Trigger the Slave Jobs') {
            steps {
                echo 'Start Trigger to send name and age to slave'
                echo 'Triggering ...'
                build job: 'slave', parameters: [string(name: 'NAME', value: 'Alice'), string(name: 'Ages', value: '21')]
            }
        }
    }
}
